        android:icon="@drawable/ic_mediation_24dp"
        android:key="up_push_server"
        android:title="@string/pref_up_push_server_title"
        app:useSimpleSummaryProvider="true" />
    <Preference android:summary="@string/pref_up_long_summary"/>
</PreferenceScreen>